#include <stdio.h>
#include <string.h>

#define TOTAL_TERRITORIOS 5

// Estrutura do territ√≥rio
struct Territorio {
    char nome[30];
    char corExercito[20];
    int tropas;
};

int main() {
    struct Territorio mapa[TOTAL_TERRITORIOS];

    printf("üåç Cadastro de Territ√≥rios - WAR Estruturado\n");

    for (int i = 0; i < TOTAL_TERRITORIOS; i++) {
        printf("\nüîπ Territ√≥rio %d:\n", i + 1);

        printf("Nome do territ√≥rio: ");
        fgets(mapa[i].nome, sizeof(mapa[i].nome), stdin);
        mapa[i].nome[strcspn(mapa[i].nome, "\n")] = '\0'; // Remove \n

        printf("Cor do ex√©rcito dominante: ");
        fgets(mapa[i].corExercito, sizeof(mapa[i].corExercito), stdin);
        mapa[i].corExercito[strcspn(mapa[i].corExercito, "\n")] = '\0';

        printf("N√∫mero de tropas: ");
        scanf("%d", &mapa[i].tropas);
        getchar(); // Limpa o buffer ap√≥s scanf
    }

    // Exibi√ß√£o do mapa
    printf("\nüó∫Ô∏è Estado Atual do Mapa:\n");
    printf("%-25s %-20s %-10s\n", "Territ√≥rio", "Cor do Ex√©rcito", "Tropas");
    for (int i = 0; i < TOTAL_TERRITORIOS; i++) {
        printf("%-25s %-20s %-10d\n",
               mapa[i].nome,
               mapa[i].corExercito,
               mapa[i].tropas);
    }

    return 0;
}
